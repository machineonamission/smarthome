[Container]
Pod=smarthome.pod
Environment=EMQX_LOADED_PLUGINS="emqx_auth_username,emqx_management"
Environment=EMQX_AUTH__USER__1__USERNAME=user
Environment=EMQX_AUTH__USER__1__PASSWORD=password
Environment=EMQX_LISTENER__TCP__EXTERNAL=1883
Environment=EMQX_LISTENER__WS__EXTERNAL=8083
Image=docker.io/emqx/emqx:latest
Volume=emqx_config:/opt/emqx/etc
Volume=emqx_log:/opt/emqx/log
Volume=emqx_data:/opt/emqx/data
